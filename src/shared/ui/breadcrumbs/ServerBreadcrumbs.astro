---
// Интерфейс для типа хлебных крошек
interface Breadcrumb {
    href: string;
    label: string;
}

// Пропсы для компонента
interface Props {
    pathname: string;
    activeColor?: string;
}

const { pathname, activeColor = "#1570EF" } = Astro.props;

// Генерация хлебных крошек на сервере
const generateBreadcrumbs = (path: string): Breadcrumb[] => {
    // Получаем сегменты пути
    const pathSegments = path.split('/').filter(Boolean);
    
    // Формируем массив хлебных крошек
    const breadcrumbs: Breadcrumb[] = [];
    
    // Пропускаем первый сегмент (например, 'categoryNews')
    const segments = pathSegments.slice(1);
    
    // Добавляем крошки для каждого сегмента
    segments.forEach((segment, index) => {
        const href = '/' + segments.slice(0, index + 1).join('/');
        const label = decodeURIComponent(segment)
            .replace(/-/g, ' ')
            .replace(/\b\w/g, (c) => c.toUpperCase());
        
        breadcrumbs.push({ href, label });
    });
    
    return breadcrumbs;
};

const breadcrumbs = generateBreadcrumbs(pathname);
---

<nav aria-label="breadcrumb">
    <ul class="flex items-center space-x-2 text-sm">
        <li>
            <a href="/" class={`text-[${activeColor}] hover:underline`}>
                Главная
            </a>
        </li>
        
        {breadcrumbs.map((crumb) => (
            <>
                <span>&gt;</span>
                <li>
                    <span class="text-gray-700 font-medium">{crumb.label}</span>
                </li>
            </>
        ))}
    </ul>
</nav> 