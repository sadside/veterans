---
import { fetchGroupsWithCategories } from '@/shared/utils/loadGroupsWithCategories'
import { Navbar } from '../widgets/navbar'
const navbarData = await fetchGroupsWithCategories()
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <Navbar client:load navbarData={navbarData} />
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 1200px;
        margin: 0 auto;
    }
</style>
