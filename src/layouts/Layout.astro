---
import { fetchGroupsWithCategories } from '@/shared/utils/loadGroupsWithCategories'
import { Navbar } from '../widgets/navbar'
import { Footer } from '../widgets/footer'

const navbarData = await fetchGroupsWithCategories()
---

<!doctype html>
<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/proc.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>Ветераны Новосибирской области</title>
        <meta name="description" content="Новосибирское региональное отделение общероссийской общественной организации ветеранов и органов прокуратуры" />
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content="Ветераны Новосибирской области" />
        <meta property="og:description" content="Новосибирское региональное отделение общероссийской общественной организации ветеранов и органов прокуратуры" />
        <meta property="og:image" content={new URL('/proc.ico', Astro.url)} />
        
        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content="Ветераны Новосибирской области" />
        <meta property="twitter:description" content="Новосибирское региональное отделение общероссийской общественной организации ветеранов и органов прокуратуры" />
        <meta property="twitter:image" content={new URL('/proc.ico', Astro.url)} />
    </head>
    <body>
        <div class="size-full flex flex-col min-h-screen">
            <Navbar client:load navbarData={navbarData} />
            <main class="flex-1 w-full mb-8 pt-20">
                <slot />
            </main>
            <Footer client:visible />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 1200px;
        margin: 0 auto;
    }
</style>
