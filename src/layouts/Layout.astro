---
import { fetchGroupsWithCategories } from '@/shared/utils/loadGroupsWithCategories'
import { Navbar } from '../widgets/navbar'
import { Footer } from '../widgets/footer'

const navbarData = await fetchGroupsWithCategories()
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <div class="size-full flex flex-col min-h-screen">
            <Navbar client:load navbarData={navbarData} />
            <main class="flex-1 w-full mb-8 pt-20">
                <slot />
            </main>
            <Footer client:visible />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 1200px;
        margin: 0 auto;
    }
</style>
